    <meta name="description" content="">
    <title>node-quiz</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/css/app.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">JS Quiz від ТРІМ-11</a>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <%if(!session.user){%>
              <li><a href="/user">Зареєструватися</a></li>
              <li><a href="/login">Увійти</a></li>
              <%}else{%>
              <li><a href="/user/<%=session.user.id%>/edit"><%=session.user.username%> Налаштування</a></li>
              <li><a href="/logout">Вийти</a></li>
              <%}%>
            </ul>
          </div>
        </div>
      </nav>
      <!-- navbar -->
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-6 col-md-3">
            <ul class="nav nav-pills nav-stacked">
              <li <%if(page=='home'){%> class="active"<%}%>><a href="/">Домашня сторінка</a></li>
              <%if(session.user) {
                if (session.user.isAdmin) {%>
              <li <%if(page=='quiz-index'){%> class="active"<%}%>><a href="/quizzes">Запитання</a></li>
              <%}
        }%>
              <%if(session.user){%>
              <li <%if(page=='quiz-index-user'){%> class="active"<%}%>><a href="/user/<%=session.user.id%>/quizzes">Пройти тест</a></li>
              
              <li <%if(page=='statistics'){%> class="active"<%}%>><a href="/statistics">Статистика</a></li>
              <%}%>
              <li <%if(page=='about'){%> class="active"<%}%>><a href="/author">Про нас</a></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-9">
            <%- body %>
