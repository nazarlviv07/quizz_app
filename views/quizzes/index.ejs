<div class="jumbotron">
    Кількість запитань:
    <ul class="list-group">
      <li class="list-group-item clearfix">
        К-сть всіх запитань: <%= total_questions %>
      </li>
      <li class="list-group-item clearfix">
        К-сть простих запитань: <%= simple_questions %>
      </li>
      <li class="list-group-item clearfix">
        К-сть середніх запитань: <%= normal_questions %>
      </li>
      <li class="list-group-item clearfix">
        К-сть складних запитань: <%= complicated_questions %>
      </li>
    </ul>
    Запитання:
  <ul class="list-group">
    <% var i; for (i=0; i < quizzes.length; i++) { %>
    <li class="list-group-item clearfix">
      <a href="/quizzes/<%= quizzes[i].id %>"><%= quizzes[i].question %></a>
      <%if(session.user) {
        if (session.user.isAdmin || session.user.id === quizzes[i].UserId) {%>
      <span class="pull-right button-group">
        <form method="post" action="/quizzes/<%= quizzes[i].id %>?_method=delete">
          <a href="/quizzes/<%= quizzes[i].id %>/edit" class="btn btn-xs btn-primary">Редагувати</a>
          <button type="submit" onClick="return confirm('Ви хочите видалити?: <%= quizzes[i].question %>');" class="btn btn-xs btn-danger">Видалити</button>
        </form>
      </span>
      <%}
        }%>
    </li>
    <% } %> 
  </ul>
  <form method="get" action="/quizzes">
    <label class="control-label">Пошук:</label>
    <input type="text" id="search" class="form-control" name="search"/>
    <br/>
    <p>
      <input class="btn btn-sm btn-primary" type="submit" value="Надіслати">
    </p>
  </form>
  <%if(session.user){%>
  <a class="btn btn-sm btn-success" href="/quizzes/new">Додати запитання</a>
  <%}%>
</div>
